{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "types": [
      "node",
      "mocha",
      "chai",
      "hardhat",
      "@nomicfoundation/hardhat-chai-matchers",
      "@nomicfoundation/hardhat-ethers"
    ]
  },
  "include": [
    "index.ts",
    "artifacts/contracts/**/*.json",
    "typechain-types/**/*.ts"
    // "scripts/**/*.ts" //TODO: Add this back after all the issues are fixed
    // "test/**/*.ts" //TODO: Add this back after all the issues are fixed
  ],
  "exclude": ["node_modules", "dist"]
}
