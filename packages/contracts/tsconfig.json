{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "types": ["node"]
  },
  "include": ["index.ts", "artifacts/contracts/**/*.json", "typechain-types/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
